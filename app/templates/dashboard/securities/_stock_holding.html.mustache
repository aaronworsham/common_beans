<tr id="stock-holding-{{ id }}" data-stock-holding-id={{id}}>
  <td>{{ ticker_symbol }}</td>
  <td>{{ net_shares }}</td>
  <td>{{ net_investment }}</td>
  <td>{{ net_return }}</td>
  <td>{{ todays_price }}</td>
  <td>{{ todays_value }}</td>
  <td>{{ total_gain }}</td>
  <td>
    <a href='#' class='buy-stock-event' data-holding-id={{id}}>Bought Shares |</a>
    <a href='#' class='sell-stock-event' data-holding-id={{id}}>Sold Shares |</a>
    <a href='#' class='edit-stock-holding' data-holding-id={{id}}>Edit |</a>
    <a href='#' class='delete-stock-holding' data-holding-id={{id}}>Remove</a>
  </td>
</tr>
<tr>
  <td colspan=8>
    <ul class='stock-buys' id="stock-buys-for-holding-{{ id }}" data-stock-holding-id={{id}}>
      <li>Started with {{starting_shares}} shares at {{starting_price}} on {{purchased_on}}</li>
    </ul>
  </td>
</tr>
<tr>
  <td colspan=8>
    <ul class='stock-sells' id="stock-sells-for-holding-{{ id }}" data-stock-holding-id={{id}}>
    </ul>
  </td>
</tr>
