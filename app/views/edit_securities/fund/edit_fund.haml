

#edit-fund-form
  = simple_form_for(@holding, :url => '#', :html =>{:class => 'edit-holding', 'data-holding-id' => @holding.id, 'data-collection-name' => 'FundHoldings'}) do |f|
    %h3 Edit Fund Holding
    #autocomplete
      = "Select Name or Symbol"
      = f.input :ticker_name, :input_html => {:value => @holding.ticker.name, :disabled => true}
      = f.input :ticker_symbol, :input_html => {:value => @holding.ticker.symbol, :disabled => true}
    = f.input :fund_ticker_id, :as => :hidden, :input_html => {:simple_tag_name => true}
    = f.input :starting_units, :input_html => {:simple_tag_name => true}
    = f.input :starting_price, :input_html => {:simple_tag_name => true}
    = f.input :purchased_at, :as => :string, :input_html => {:simple_tag_name => true, :class => 'date_picker'}
    = f.submit