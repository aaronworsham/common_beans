

#edit-bond-form
  = simple_form_for(@holding, :url => '#', :html =>{:class => 'edit-holding', 'data-holding-id' => @holding.id, 'data-collection-name' => 'BondHoldings'}) do |f|
    %h3 Edit Bond Holding
    = f.input :name, :input_html => {:simple_tag_name => true}
    = f.input :cusip, :label => 'CUSIP number', :input_html => {:simple_tag_name => true}
    = f.input :purchased_at, :as => :string, :input_html => {:simple_tag_name => true, :class => 'date_picker'}
    = f.input :matures_at, :input_html => {:simple_tag_name => true}
    = f.input :coupon, :input_html => {:simple_tag_name => true}
    = f.input :purchase_price, :input_html => {:simple_tag_name => true}
    = f.input :starting_quantity, :input_html => {:simple_tag_name => true}
    = f.input :frequency, :input_html => {:simple_tag_name => true}
    = f.input :face_value, :input_html => {:simple_tag_name => true}
    = f.input :expected_yield, :input_html => {:simple_tag_name => true}
    = f.submit
