= content_for :on_ready do
  - if @portfolio
    !="Portfolios.add(#{@portfolio.to_json});"
  !="Holdings.reset(#{@holdings.to_json});"
  !="Messages.reset(#{@messages});"


.container_16
  #portfolio-glance
    - if @portfolio.blank?
      = render 'empty_portfolio'

.container_16
  #messages
    %ul
      %li
        %a{:href=>"#tab-friends"}="Friends"
      %li
        %a{:href=>"#tab-following"}="Following"
      %li
        %a{:href=>"#tab-groups"}="Groups"
      %li
        %a{:href=>"#tab-system"}="System"
      %li
        %a{:href=>"#tab-everyone"}="Everyone(#{@messages_everyone_count})"
    #tab-friends
      %table
   
    #tab-following
      %table

    #tab-groups
      %table

    #tab-system
      %table

    #tab-everyone
      %table

